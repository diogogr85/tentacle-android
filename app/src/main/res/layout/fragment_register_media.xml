<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools">

    <include layout="@layout/default_background"/>

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:paddingStart="16dp"
                android:paddingTop="19dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/mediaImageView"
                    android:layout_width="44dp"
                    android:layout_height="58dp"
                    android:background="#D8D8D8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/mediaNameTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="40dp"
                    android:textSize="24sp"
                    android:textColor="@android:color/white"
                    tools:text="Space Invaders"
                    app:layout_constraintStart_toEndOf="@id/mediaImageView"
                    app:layout_constraintTop_toTopOf="@id/mediaImageView"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="mediaImageView, mediaNameTextView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                    android:id="@+id/radioGroupTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:textSize="24sp"
                    android:textColor="@android:color/white"
                    android:text="@string/register_media_group_title"
                    app:layout_constraintStart_toStartOf="@id/mediaImageView"
                    app:layout_constraintTop_toBottomOf="@id/barrier"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <RadioGroup
                    android:id="@+id/mediaPlataformRadioGroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    app:layout_constraintStart_toStartOf="@id/mediaImageView"
                    app:layout_constraintTop_toBottomOf="@id/radioGroupTitle"
                    app:layout_constraintEnd_toEndOf="parent">

                <RadioButton
                        android:id="@+id/mediaPS3RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        style="@style/StyleRadioButton"
                        android:text="@string/register_media_ps3_radio_button_title"/>

                <RadioButton
                        android:id="@+id/mediaPS4RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        style="@style/StyleRadioButton"
                        android:text="@string/register_media_ps4_radio_button_title"/>

                <RadioButton
                        android:id="@+id/mediaXbox360RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        style="@style/StyleRadioButton"
                        android:text="@string/register_media_xbox360_radio_button_title"/>

                <RadioButton
                        android:id="@+id/mediaXboxOneRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        style="@style/StyleRadioButton"
                        android:text="@string/register_media_xboxone_radio_button_title"/>

                <RadioButton
                        android:id="@+id/media3DSRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        style="@style/StyleRadioButton"
                        android:text="@string/register_media_3ds_radio_button_title"/>

                <RadioButton
                        android:id="@+id/mediaSwitchRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        style="@style/StyleRadioButton"
                        android:text="@string/register_media_switch_radio_button_title"/>

            </RadioGroup>

            <br.com.concrete.tentacle.custom.ButtonView
                    android:id="@+id/mediaRegisterButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/StyleButton"
                    app:enabled="false"
                    app:buttonName="@string/register_media_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
