<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgColor">

    <TextView
            android:textSize="22sp"
            android:id="@+id/tvTitle"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/textHint"
            android:text="@string/create_account_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:alpha="0.2"
            android:src="@drawable/logo_tentacle"
            android:layout_width="wrap_content"
            android:translationX="160dp"
            android:translationY="50dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            android:theme="@style/TextInputLayoutTheme"
            style="@style/TextInputLayoutStyle"
            android:id="@+id/tilEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
                style="@style/EditTextTheme"
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/register_email_hint"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"/>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
            android:theme="@style/TextInputLayoutTheme"
            style="@style/TextInputLayoutStyle"
            android:id="@+id/tilUserName"
            app:layout_constraintTop_toBottomOf="@+id/tilEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
                style="@style/EditTextTheme"
                android:id="@+id/edtUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/register_name_hint"
                android:inputType="textCapWords"
                android:imeOptions="actionNext"/>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
            android:theme="@style/TextInputLayoutTheme"
            style="@style/TextInputLayoutStyle"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/textHint"
            android:id="@+id/tilPassword"
            app:layout_constraintTop_toBottomOf="@+id/tilUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <com.google.android.material.textfield.TextInputEditText
                style="@style/EditTextTheme"
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/register_password_hint"
                android:inputType="textPassword"
                android:imeOptions="actionNext"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:theme="@style/TextInputLayoutTheme"
            style="@style/TextInputLayoutStyle"
            android:id="@+id/tilPhone"
            app:layout_constraintTop_toBottomOf="@+id/tilPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
                style="@style/EditTextTheme"
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/register_ddd_phone_hint"
                android:inputType="phone"
                android:imeOptions="actionNext"/>

    </com.google.android.material.textfield.TextInputLayout>

    <fr.ganfra.materialspinner.MaterialSpinner
            app:ms_dropDownHintView="@layout/spinner_dropdown_hint_layout"
            app:ms_hintView="@layout/spinner_item_layout"
            style="@style/MaterialSpinnerStyle"
            app:ms_hint="@string/state_hint"
            app:ms_floatingLabelText="@string/state_hint"
            android:entries="@array/estados"
            android:layout_marginTop="@dimen/margin_top_default"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/spCity"
            app:layout_constraintHorizontal_weight="4"
            android:id="@+id/spState"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tilPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <fr.ganfra.materialspinner.MaterialSpinner
            app:ms_dropDownHintView="@layout/spinner_dropdown_hint_layout"
            app:ms_hintView="@layout/spinner_item_layout"
            style="@style/MaterialSpinnerStyle"
            app:ms_hint="@string/city_hint"
            app:ms_floatingLabelText="@string/state_hint"
            android:entries="@array/cidades"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginStart="4dp"
            app:layout_constraintHorizontal_weight="6"
            android:id="@+id/spCity"
            app:layout_constraintTop_toTopOf="@+id/spState"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/spState"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCreateAccount"
            android:textColor="#fff"
            android:text="@string/create_account"
            android:background="@color/colorAccent"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/spState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>