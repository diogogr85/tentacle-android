<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login"
        tools:context=".features.login.LoginFragment"
        tools:targetApi="lollipop"
        android:id="@+id/clParent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_mobile"
            android:alpha="@dimen/alphaImageLogo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRegisterAccount"
            android:id="@+id/imageView"/>

    <TextView
            android:id="@+id/tvOla"
            style="@style/StyleLabelOla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ola_novamente"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tvEmail"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidelineMessage"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2"/>

    <TextView
            android:id="@+id/tvMessage"
            style="@style/StyleLabelMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/entre_e_veja_os_novos_jogos_adicionados"
            app:layout_constraintEnd_toEndOf="@+id/tvOla"
            app:layout_constraintStart_toStartOf="@+id/tvOla"
            app:layout_constraintTop_toBottomOf="@+id/tvOla"/>

    <TextView
            android:id="@+id/tvEmail"
            style="@style/StyleLabelLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/edEmail"
            app:layout_constraintStart_toStartOf="@+id/edEmail"/>

    <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edEmail"
            style="@style/StyleEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tvErrorEmail"/>

    <TextView
            android:id="@+id/tvErrorEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_invalido"
            style="@style/TextErrorMessage"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="@+id/edEmail"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>

    <TextView
            android:id="@+id/tvPassword"
            style="@style/StyleLabelLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="@+id/edPassword"/>

    <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edPassword"
            android:inputType="textPassword"
            style="@style/StyleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPassword"/>

    <TextView
            android:id="@+id/tvErrorPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/senha_invalida"
            style="@style/TextErrorMessage"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edPassword"
            app:layout_constraintStart_toStartOf="@+id/edPassword"/>

    <br.com.concrete.tentacle.custom.ButtonView
            android:id="@+id/btLogin"
            style="@style/StyleButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:buttonName="@string/login"
            app:textColorButton="@android:color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvErrorPassword"/>

    <TextView
            android:padding="@dimen/paddingClickTextView"
            android:id="@+id/tvRegisterAccount"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/margin_top_default"
            app:layout_constraintTop_toBottomOf="@id/btLogin"
            app:layout_constraintStart_toStartOf="@id/btLogin"
            android:text="@string/register_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>