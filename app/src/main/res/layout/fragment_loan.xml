<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:padding="@dimen/margin_default">

    <include layout="@layout/logo_tentacle"/>

    <ImageView
        android:background="@color/bgGameIcon"
        android:id="@+id/ivGame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/game_icon_width"
        android:layout_height="@dimen/game_icon_height"/>

    <TextView
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default"
        android:textColor="@color/textColor"
        android:textAppearance="@style/TextHeavy.24sp"
        tools:text="Nome do jogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ivGame"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvTitle1"
        android:layout_marginTop="@dimen/dp_25"
        android:textColor="@color/textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/library_loan_text1"
        android:textAppearance="@style/TextHeavy.16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivGame"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipContainer"
        app:singleSelection="true"
        android:layout_marginTop="@dimen/margin_default"
        app:layout_constraintTop_toBottomOf="@id/tvTitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <br.com.concrete.tentacle.custom.ChipCustom
            app:chipSurfaceColor="@null"
            android:text="NS"
            android:layout_width="78dp"
            android:layout_height="54dp"/>

        <br.com.concrete.tentacle.custom.ChipCustom
            app:chipSurfaceColor="@null"
            android:text="NS"
            android:layout_width="78dp"
            android:layout_height="54dp"/>

        <br.com.concrete.tentacle.custom.ChipCustom
            app:chipSurfaceColor="@null"
            android:text="NS"
            android:layout_width="78dp"
            android:layout_height="54dp"/>

        <br.com.concrete.tentacle.custom.ChipCustom
            app:chipSurfaceColor="@null"
            android:text="NS"
            android:layout_width="78dp"
            android:layout_height="54dp"/>

        <br.com.concrete.tentacle.custom.ChipCustom
            app:chipSurfaceColor="@null"
            android:text="NS"
            android:layout_width="78dp"
            android:layout_height="54dp"/>

        <br.com.concrete.tentacle.custom.ChipCustom
            app:chipSurfaceColor="@null"
            android:text="NS"
            android:layout_width="78dp"
            android:layout_height="54dp"/>

    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/tvTitle2"
        android:layout_marginTop="@dimen/dp_25"
        android:textColor="@color/textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/library_loan_text1"
        android:textAppearance="@style/TextHeavy.16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chipContainer"/>

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:textAppearance="@style/TextMedium.14sp"
        app:ms_arrow_tint="@color/textColor"
        app:ms_background_color="@color/chipIconTint"
        app:ms_text_color="@color/textColor"
        app:ms_hint="@string/library_loan_user_list_hint"
        app:ms_hint_color="@color/textColor"
        android:id="@+id/spUsers"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle2"/>

    <br.com.concrete.tentacle.custom.StateButtomView
        android:id="@+id/btPerformLoan"
        app:buttonName="@string/library_loan_perform_loan"
        style="@style/StyleButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>