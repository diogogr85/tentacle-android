<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAddNewGame"
        android:paddingStart="@dimen/componentsMarginDefaultError"
        android:paddingEnd="@dimen/componentsMarginDefaultError"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:layout_margin="8dp"
        android:animateLayoutChanges="true">

    <TextView
            android:textAppearance="@style/TextHeavy.16sp"
            android:id="@+id/tvGameName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/textColor"
            android:text="Nome do jogo"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:gravity="center_vertical"
            android:layout_marginEnd="@dimen/componentsMarginDefaultError"
            app:layout_constraintEnd_toStartOf="@+id/ivArrow"
            android:ellipsize="end"
            android:lines="1"/>

    <ImageView
            android:id="@+id/ivArrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvGameName"
            app:layout_constraintBottom_toBottomOf="@+id/tvGameName"
            android:src="@drawable/ic_arrow_down"
            android:layout_gravity="center_vertical"
            android:layout_width="28dp"
            android:layout_height="28dp"/>

    <LinearLayout
            android:animateLayoutChanges="true"
            app:layout_constraintTop_toBottomOf="@+id/ivArrow"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_marginTop="7dp"
                android:layout_marginEnd="4dp"
                android:textColor="#FFF"
                android:gravity="center"
                android:textAppearance="@style/TextBlack.9dp"
                android:text="PS3"
                android:id="@+id/tvPS3"
                android:visibility="gone"
                android:background="@drawable/circle_bg_icon_bottombar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:layout_marginTop="7dp"
                android:layout_marginEnd="4dp"
                android:textColor="#FFF"
                android:gravity="center"
                android:textAppearance="@style/TextBlack.9dp"
                android:text="PS4"
                android:id="@+id/tvPS4"
                android:visibility="gone"
                android:background="@drawable/circle_bg_icon_bottombar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginTop="7dp"
                android:layout_marginEnd="4dp"
                android:textColor="#FFF"
                android:gravity="center"
                android:textAppearance="@style/TextBlack.9dp"
                android:text="360"
                android:id="@+id/tv360"
                android:visibility="gone"
                android:background="@drawable/circle_bg_icon_bottombar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginTop="7dp"
                android:layout_marginEnd="4dp"
                android:textColor="#FFF"
                android:gravity="center"
                android:textAppearance="@style/TextBlack.9dp"
                android:text="ONE"
                android:id="@+id/tvONE"
                android:visibility="gone"
                android:background="@drawable/circle_bg_icon_bottombar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        <TextView
                android:layout_marginTop="7dp"
                android:layout_marginEnd="4dp"
                android:textColor="#FFF"
                android:gravity="center"
                android:textAppearance="@style/TextBlack.9dp"
                android:text="3DS"
                android:id="@+id/tv3DS"
                android:visibility="gone"
                android:background="@drawable/circle_bg_icon_bottombar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginTop="7dp"
                android:layout_marginEnd="4dp"
                android:textColor="#FFF"
                android:gravity="center"
                android:textAppearance="@style/TextBlack.9dp"
                android:text="NS"
                android:id="@+id/tvNS"
                android:visibility="gone"
                android:background="@drawable/circle_bg_icon_bottombar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>