<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:targetApi="lollipop">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TextInputLayoutTheme">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">@color/textHint</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
        <item name="android:textColor">#FFF</item>
        <item name="android:textColorHint">@color/textHint</item>

    </style>

    <style name="TextInputLayoutStyle">
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
        <item name="android:layout_marginTop">@dimen/margin_top_default</item>
    </style>

    <style name="TextInputLayoutTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EditTextTheme">
        <item name="android:textColor">#FFF</item>
    </style>


    <style name="ButtonSpinnerStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/shape_border_rounded_white</item>

    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="TextColorWhite">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextColorWhiteBold">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleLabelOla" parent="TextColorWhiteBold">
        <item name="android:textSize">@dimen/sizeLabelOla</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="StyleLabelMessage" parent="TextColorWhite">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">14dp</item>
    </style>

    <style name="StyleLabelLogin" parent="TextColorWhiteBold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/sizeLabel</item>
        <item name="android:layout_margin">@dimen/marginBorder</item>
        <item name="android:layout_marginEnd">@dimen/marginBorder</item>
        <item name="android:layout_marginStart">@dimen/marginBorder</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StyleEditText" parent="Widget.Design.TextInputLayout">
        <item name="android:background">@drawable/shape_border_rounded_white</item>
        <!--<item name="android:layout_marginEnd">@dimen/marginBorder</item>-->
        <!--<item name="android:layout_marginStart">@dimen/marginBorder</item>-->
        <item name="android:padding">@dimen/paddingEditText</item>
    </style>

    <style name="StyleButton" parent="TextColorWhiteBold">
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/minHeight</item>
        <item name="android:background">@drawable/shape_border_rounded_blue</item>
        <!--<item name="android:layout_marginEnd">@dimen/marginBorder</item>-->
        <!--<item name="android:layout_marginStart">@dimen/marginBorder</item>-->
        <item name="android:layout_marginTop">@dimen/marginBorderTop</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextErrorMessage">
        <!--<item name="android:textColor">@color/colorAccent</item>-->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sizeLabelErrorMessage</item>
        <item name="android:layout_marginEnd">@dimen/marginBorder</item>
        <item name="android:layout_marginStart">@dimen/marginBorder</item>
    </style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@android:color/white</item>
    </style>

</resources>
